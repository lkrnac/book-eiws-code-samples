<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
  xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
  
  <batch:job id="simpleRecordsJob">
    <batch:step id="simpleRecordsStep">
      <batch:tasklet>
        <batch:chunk reader="simpleRecordReader" writer="streamRecordWriter" 
          processor="simpleRecordProcessor" commit-interval="4" >
          <batch:streams>
            <batch:stream ref="recordsReaderItemStream"/>
          </batch:streams>
        </batch:chunk>
      </batch:tasklet>
    </batch:step>
  </batch:job>
</beans>
